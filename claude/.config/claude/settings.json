{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 30,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "BASH_MAX_TIMEOUT_MS": "300000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "32000",
    "DISABLE_AUTOUPDATER": "0",
    "DISABLE_COST_WARNINGS": "0",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "MAX_MCP_OUTPUT_TOKENS": "25000",
    "MCP_TIMEOUT": "10000",
    "MCP_TOOL_TIMEOUT": "15000",
    "USE_BUILTIN_RIPGREP": "1"
  },
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "LS",
      "Task",
      "TodoWrite",
      "Bash(awk:*)",
      "Bash(bun run lint)",
      "Bash(bun run test:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(curl:*)",
      "Bash(date:*)",
      "Bash(diff:*)",
      "Bash(dig:*)",
      "Bash(docker container:*)",
      "Bash(docker events:*)",
      "Bash(docker inspect:*)",
      "Bash(docker logs:*)",
      "Bash(docker port:*)",
      "Bash(docker restart:*)",
      "Bash(docker start:*)",
      "Bash(docker stats:*)",
      "Bash(docker stop:*)",
      "Bash(docker top:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(free:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr create:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git push)",
      "Bash(git reset:*)",
      "Bash(git rev-parse:*)",
      "Bash(git stash:*)",
      "Bash(git status)",
      "Bash(git tag:*)",
      "Bash(go clean:*)",
      "Bash(go env:*)",
      "Bash(go fmt:*)",
      "Bash(go get:*)",
      "Bash(go install:*)",
      "Bash(go list:*)",
      "Bash(go run:*)",
      "Bash(go test:*)",
      "Bash(go vet:*)",
      "Bash(go work:*)",
      "Bash(grep:*)",
      "Bash(gunzip:*)",
      "Bash(gzip:*)",
      "Bash(head:*)",
      "Bash(id:*)",
      "Bash(less:*)",
      "Bash(mkdir:*)",
      "Bash(more:*)",
      "Bash(jq:*)",
      "Bash(just:*)",
      "Bash(kill:*)",
      "Bash(killall:*)",
      "Bash(locate:*)",
      "Bash(ls:*)",
      "Bash(mv:*)",
      "Bash(netstat:*)",
      "Bash(node:*)",
      "Bash(nslookup:*)",
      "Bash(paste:*)",
      "Bash(ping:*)",
      "Bash(printf:*)",
      "Bash(ps:*)",
      "Bash(pwd)",
      "Bash(python:*)",
      "Bash(python -m pytest:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(sort:*)",
      "Bash(tail:*)",
      "Bash(tar:*)",
      "Bash(test:*)",
      "Bash(touch:*)",
      "Bash(uname:*)",
      "Bash(uniq:*)",
      "Bash(unzip:*)",
      "Bash(uptime:*)",
      "Bash(uv run:*)",
      "Bash(uv sync)",
      "Bash(uv venv:*)",
      "Bash(wc:*)",
      "Bash(whereis:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Bash(yq:*)",
      "Bash(zip:*)"
    ],
    "deny": [
      "Bash(atlas schema apply:*)",
      "Bash(atlas schema clean:*)",
      "Bash(curl:* | bash)",
      "Bash(dd:*)",
      "Bash(eval:*)",
      "Bash(fdisk:*)",
      "Bash(just db:baseline)",
      "Bash(just db:apply)",
      "Bash(just db:clean)",
      "Bash(just db:refresh)",
      "Bash(just db:squash)",
      "Bash(mkfs:*)",
      "Bash(mount:*)",
      "Bash(rm -rf /)",
      "Bash(rsync:*)",
      "Bash(scp:*)",
      "Bash(ssh:*)",
      "Bash(su:*)",
      "Bash(sudo:*)",
      "Bash(umount:*)",
      "Bash(wget:* | sh)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "enableAllProjectMcpServers": false,
  "statusLine": {
    "type": "command",
    "command": "~/.config/claude/statusline.js"
  },
  "forceLoginMethod": "claudeai",
  "outputStyle": "Concise"
}